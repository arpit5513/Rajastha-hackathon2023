<Screen_Function>:
    name: "Function"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.jpg'

    MDCard:
        size_hint: .6,.7
        pos_hint: {"center_x": 0.5 ,"center_y": 0.5}
        md_bg_color:(33/225, 29/225, 33/225,.85)
        padding: 25
        spacing: 25
        orientation: 'vertical'
    
        MDLabel:
            id: Welcome_label
            theme_text_color: 'Custom'
            text_color: app.theme_cls.primary_color
            text: "Face Recognition System"
            #pos_hint: {"center_x": 0.67 ,"center_y": 0.5}
            halign: 'center'
            font_size: 40
            padding_y: 15
        
        MDRoundFlatButton:
            text:"Admin Panel"
            font_size: 25 
            pos_hint:{'center_x': .5}
            on_press:
                app.root.current = "Admin_Login"
                root.manager.transition.direction = 'up'


        MDRoundFlatButton:
            text:"Faculty Panel"
            font_size: 25 
            pos_hint:{'center_x': .5}
            on_press: 
                app.root.current = "Faculty_Login"
                root.manager.transition.direction = 'up'
    
        MDIconButton:
            icon: "camera"
            pos_hint:{'center_x': .5}
            md_bg_color: app.theme_cls.primary_color
            on_press: 
                app.root.current = "Camera_Panel"
                root.manager.transition.direction = 'up'
            on_release:
                app.Camera_Start()

<Screen_Admin_Login>:
    name: 'Admin_Login'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.jpg'
    MDCard:
        size_hint: .6,.7
